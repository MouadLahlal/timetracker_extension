{
    "manifest_version": 2,
    "name": "TimeTracker",
    "version":"1.0.0",
    "description":"",
    "icons": { 
        "16": "icons/icon16.ico",
        "48": "icons/icon48.ico",
        "128": "icons/icon128.ico"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon": {
            "48": "icons/icon48.ico"
        },
        "default_title":"TimeTracker"
    },
    "content_security_policy": "script-src 'self' https://*.jquery.com https://*.jsdelivr.net; object-src 'self'",
    "web_accessible_resources": [
        "https://code.jquery.com/jquery-3.5.1.slim.min.js",
        "https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js",
        "https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "webNavigation"
    ]
}
